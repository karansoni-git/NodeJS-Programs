<%- include("../partials/head") %>
  <body>
    <header>
      <%- include("../partials/navbar") %>
      <h1><%= editing? "Edit" : "Register"%> your Home</h1>
    </header>
    <main>
      <form action='/host/<%= editing ? "edit-home" : "add-home"%>' method="POST">
        <input type="hidden" name="homeId" value="<%= editing ? home.homeId : ''%>">
        <div class="homeName input">
          <label for="homeName">Home Name:</label>
          <input
          class="home-details"
          type="text"
          name="homeName"
          value="<%= editing ? home.homeName : ''%>"
          placeholder="Enter Your Home Name"
          />
        </div>
        <div class="homePrice input">
          <label for="homePrice">Home Price:</label>
          <input type="number" id="homePrice" name="homePrice" class="home-details"
          value="<%= editing ? home.homePrice : ''%>"
          placeholder="Enter Home Price">
        </div>
        <div class="homeLocation input">
          <label for="homeLocation">Home Location:</label>
          <input type="text" id="homeLocation" name="homeLocation" class="home-details"
          value="<%= editing ? home.homeLocation : ''%>"
          placeholder="Enter Home Location">
        </div>
        <div class="homeUrl input">
          <label for="homeUrl">Home Image Url:</label>
          <input type="text" id="homeUrl" name="homeUrl" class="home-details"
          value="<%= editing ? home.homeUrl : ''%>"
          placeholder="Enter Home Image Url">
        </div>
        <div class="homeRating input">
          <label for="homeRating">Home Rating ‚≠ê:</label>
          <input type="number" id="homeRating" name="homeRating" class="home-details"
          value="<%= editing ? home.homeRating : ''%>"
          placeholder="Enter Home Rating" min="0" max="5" step="0.1" value="1">
        </div>
        <div class="submit">
          <input type="submit" value='<%= editing ? "Update" : "Submit"%>' id="done"/>
        </div>
        </div>
      </form>
    </main>
  </body>
</html>
